<UserControl x:Class="Проект_тринажёр_по_химии_Оформленный.UserControls.TablicaAlkaniControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Проект_тринажёр_по_химии_Оформленный.UserControls"
             mc:Ignorable="d" d:DesignWidth="954" Height="748">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" MinHeight="120"/>
            <RowDefinition Height="Auto" MinHeight="29.96"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Признак сравнения" FontWeight="Bold" Margin="10,10,10,10" />
        <TextBlock Grid.Row="0" Grid.Column="1" Text="Алканы" FontWeight="Bold" Margin="10,10,10,10" />
        <TextBlock Grid.Row="0" Grid.Column="2" Text="Алкены" FontWeight="Bold" Margin="10,10,10,10" />
        <TextBlock Grid.Row="0" Grid.Column="3" Text="Алкины" FontWeight="Bold" Margin="10,10,10,10" />
        <TextBlock Grid.Row="0" Grid.Column="4" Text="Алкадиены" FontWeight="Bold" Margin="10,10,10,10" />


        <Grid Grid.Row="1" Grid.Column="0" Margin="5,5,5,5">
            <TextBlock  Text="Общая формула" Margin="5"/>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1" Margin="5,5,5,5">
            <TextBox x:Name="alkanesFormula" Margin="5"/>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="2" Margin="5,5,5,5">
            <TextBox x:Name="alkenesFormula" Margin="5"/>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="3" Margin="5,5,5,5">
            <TextBox x:Name="alkynesFormula" Margin="5"/>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="4" Margin="5,5,5,5">
            <TextBox x:Name="alkadienesFormula" Margin="5"/>
        </Grid>



        <Grid Grid.Row="2" Grid.Column="0" Margin="5,5,5,5">
            <TextBlock Text="Кратность химической связи" Margin="5"/>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1" Margin="5,5,5,5">
            <TextBox x:Name="alkanesBond" Margin="5"/>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="2" Margin="5,5,5,5">
            <TextBox x:Name="alkenesBond" Margin="5"/>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="3" Margin="5,5,5,5">
            <TextBox x:Name="alkynesBond" Margin="5"/>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="4" Margin="5,5,5,5">
            <TextBox x:Name="alkadienesBond" Margin="5"/>
        </Grid>


        <Grid Grid.Row="3" Grid.Column="0" Margin="5,5,5,5">
            <TextBlock  Text="Особенности химической связи" Margin="5"/>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="1" Margin="5,5,5,5">
            <TextBox x:Name="alkanesConnection" Margin="5"/>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="2" Margin="5,5,5,5">
            <TextBox x:Name="alkenesConnection" Margin="5"/>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="3" Margin="5,5,5,5">
            <TextBox x:Name="alkynesConnection" Margin="5"/>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="4" Margin="5,5,5,5">
            <TextBox x:Name="alkadienesConnection" Margin="5"/>
        </Grid>



        <Grid Grid.Row="4" Grid.Column="0" Margin="5,5,5,5">
            <TextBlock Text="Основной тип химической активности" Margin="5"/>
        </Grid>
        <Grid Grid.Row="4" Grid.Column="1" Margin="5,5,5,5">
            <TextBox x:Name="alkanesType" Margin="5"/>
        </Grid>
        <Grid Grid.Row="4" Grid.Column="2" Margin="5,5,5,5">
            <TextBox x:Name="alkenesType" Margin="5"/>
        </Grid>
        <Grid Grid.Row="4" Grid.Column="3" Margin="5,5,5,5">
            <TextBox x:Name="alkynesType" Margin="5"/>
        </Grid>
        <Grid Grid.Row="4" Grid.Column="4" Margin="5,5,5,5">
            <TextBox x:Name="alkadienesType" Margin="5"/>
        </Grid>



        <Grid Grid.Row="5" Grid.Column="0" Margin="5,5,5,5">
            <TextBlock Text="Химические свойства" Margin="5"/>
        </Grid>
        <Grid Grid.Row="5" Grid.Column="1" Margin="5,5,5,5">
            <TextBox x:Name="alkanesProperties" Margin="5"/>
        </Grid>
        <Grid Grid.Row="5" Grid.Column="2" Margin="5,5,5,5">
            <TextBox x:Name="alkenesProperties" Margin="5"/>
        </Grid>
        <Grid Grid.Row="5" Grid.Column="3" Margin="5,5,5,5">
            <TextBox x:Name="alkynesProperties" Margin="5"/>
        </Grid>
        <Grid Grid.Row="5" Grid.Column="4" Margin="5,5,5,5">
            <TextBox x:Name="alkadienesProperties" Margin="5"/>
        </Grid>


        <Grid Grid.Row="6" Grid.Column="0" Margin="5,5,5,5">
            <TextBlock  Text="Представители класса (общая формула вещества)" Margin="5"/>
        </Grid>
        <Grid Grid.Row="6" Grid.Column="1" Margin="5,5,5,5">
            <TextBox x:Name="alkanesClassFormula" Margin="5" Height="100"/>
        </Grid>
        <Grid Grid.Row="6" Grid.Column="2" Margin="5,5,5,5">
            <TextBox x:Name="alkenesClassFormula" Margin="5" Height="100"/>
        </Grid>
        <Grid Grid.Row="6" Grid.Column="3" Margin="5,5,5,5">
            <TextBox x:Name="alkynesClassFormula" Margin="5" Height="100"/>
        </Grid>
        <Grid Grid.Row="6" Grid.Column="4" Margin="5,5,5,5">
            <TextBox x:Name="alkadienesClassFormula" Margin="5" Height="100"/>
        </Grid>


        <Grid Grid.Row="7" Grid.Column="0" Margin="5,5,5,5">
            <TextBlock Text="Представители класса (названия)" Margin="5"/>
        </Grid>
        <Grid Grid.Row="7" Grid.Column="1" Margin="5,5,5,5">
            <TextBox x:Name="alkanesClassNames" Margin="5" Height="100" />
        </Grid>
        <Grid Grid.Row="7" Grid.Column="2" Margin="5,5,5,5">
            <TextBox x:Name="alkenesClassNames" Margin="5" Height="100"/>
        </Grid>
        <Grid Grid.Row="7" Grid.Column="3" Margin="5,5,5,5">
            <TextBox x:Name="alkynesClassNames" Margin="5" Height="100"/>
        </Grid>
        <Grid Grid.Row="7" Grid.Column="4" Margin="5,5,5,5">
            <TextBox x:Name="alkadienesClassNames" Margin="5" Height="100"/>
        </Grid>


        <Grid Grid.Row="8" Grid.Column="0" Margin="5,5,5,5">
            <TextBlock Text="Представители класса (структурные формулы)" Margin="5"/>
        </Grid>
        <Grid Grid.Row="8" Grid.Column="1" Margin="5,5,5,5">
            <TextBox x:Name="alkanesClassStructures" Margin="5" Height="100"/>
        </Grid>
        <Grid Grid.Row="8" Grid.Column="2" Margin="5,5,5,5">
            <TextBox x:Name="alkenesClassStructures" Margin="5" Height="100"/>
        </Grid>
        <Grid Grid.Row="8" Grid.Column="3" Margin="5,5,5,5">
            <TextBox x:Name="alkynesClassStructures" Margin="5" Height="100"/>
        </Grid>
        <Grid Grid.Row="8" Grid.Column="4" Margin="5,5,5,5">
            <TextBox x:Name="alkadienesClassStructures" Margin="5" Height="100"/>
        </Grid>


        <Grid Grid.Row="9" Grid.ColumnSpan="5" Margin="5,5,5,5">
            <ListBox x:Name="DragSourceList" Margin="5" Height="100"/>
        </Grid>
        <Button Grid.Row="10" Grid.ColumnSpan="3" Content="Проверить ответы" Click="CheckAnswersButton_Click" Margin="98,5,99,-2" Grid.Column="1" RenderTransformOrigin="0.508,0.625"/>

    </Grid>
</UserControl>
